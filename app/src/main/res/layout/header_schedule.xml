<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/schedule_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Title Goes Here"
        android:layout_centerHorizontal="true"
        android:textColor="@color/header_grey"/>


    <TextView
        android:id="@+id/schedule_header_standard_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="ALL TIMES IN EASTERN STANDARD"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_grey"
        android:layout_below="@id/schedule_header_title"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/schedule_header_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="AWAY"
        android:textColor="@color/header_grey"
        android:layout_below="@id/schedule_header_standard_time"/>

    <TextView
        android:id="@+id/schedule_header_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="HOME"
        android:textColor="@color/header_grey"
        android:layout_below="@id/schedule_header_standard_time"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/schedule_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="TIME"
        android:textColor="@color/header_grey"
        android:layout_below="@id/schedule_header_standard_time"
        android:layout_marginLeft="180dp"/>

    <TextView
        android:id="@+id/schedule_header_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="INFO"
        android:textColor="@color/header_grey"
        android:layout_below="@id/schedule_header_standard_time"
        android:layout_marginLeft="260dp"/>

</RelativeLayout>